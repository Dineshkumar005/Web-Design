</div>

<div class="container-fluid bg-light py-5 px-3" id="electronics">
    <h5 class="p-3 pt-0 text-secondary">Hardware</h5>
    <div class="row row-cols-1 row-cols-lg-3 row-cols-sm-2 g-4 px-3">

        @{
            i = 0;
            while(i<3){
                Package item=hardware[i];

                <div class="col">
                <div class="card h-100">
                    <img class="fill-img rounded" src=@item.Imgurl alt="">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.CompName</h5>
                        <p class="card-text  flex-fill">
                            @item.Description
                        </p>
                        <div class="d-inline">
                                <a href="details/@item.PackId">For Details</a>
