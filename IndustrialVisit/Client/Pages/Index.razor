</div>

@code {
    List<Package> electronics = new List<Package>(), it = new List<Package>(), hardware = new List<Package>();
    protected override async Task OnInitializedAsync()
    {
        electronics = await PackageService.GetPackagesOfCategory("electronics");
        it = await PackageService.GetPackagesOfCategory("information technology");
        hardware = await PackageService.GetPackagesOfCategory("hardware");
    }
}