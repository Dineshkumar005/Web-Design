<div class="container-fluid bg-light py-4 px-3" id="offers">
    <h5 class="p-3 pt-0 text-secondary">Offers</h5>
    <div class="list-group list-group-horizontal position-relative overflow-x-auto scrolls">
        <a href="" class="list-group-item card h-100 py-3 px-4 m-2 rounded">
            <h5 class="card-title text-center">Above 50 Persons</h5>
            <p class="fw-bold mt-3 text-center text-secondary">5% Off</p>
        </a>
        <a href="" class="list-group-item card h-100 py-3 px-4 m-2 rounded">
            <h5 class="card-title text-center">Above 200 Persons</h5>
            <p class="fw-bold mt-3 text-center text-secondary">15% Off</p>
        </a>
        <a href="" class="list-group-item card h-100 py-3 px-4 m-2 rounded">
            <h5 class="card-title text-center">Above 500 Persons</h5>
            <p class="fw-bold mt-3 text-center text-secondary">25% Off</p>
        </a>
    </div>

</div>


<div class="container-fluid bg-light py-5 px-3" id="electronics">
    <h5 class="p-3 pt-0 text-secondary">Electronics</h5>
    <div class="row row-cols-1 row-cols-lg-3 row-cols-sm-2 g-4 px-3">
       
        @{
            int i=0;
            while(i<3){
                Package item=electronics[i];

                <div class="col">
                <div class="card h-100">
                    <img class="fill-img rounded" src=@item.Imgurl alt="">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.CompName</h5>
                        <p class="card-text  flex-fill">
                            @item.Description
                        </p>
                        <div class="d-inline">
                            <a href="details/@item.PackId">For Details</a>
                            <a href="" class="float-end">For Booking</a>
                        </div>
                    </div>
                </div>
                </div>

                i++;
            }
        }

    </div>
</div>

<div class="container-fluid bg-light py-5 px-3" id="electronics">
    <h5 class="p-3 pt-0 text-secondary">Information Technology</h5>
    <div class="row row-cols-1 row-cols-lg-3 row-cols-sm-2 g-4 px-3">
        @{
            i = 0;
            while(i<3){
                Package item=it[i];

                <div class="col">
